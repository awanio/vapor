# Environment Configuration Template
# Copy this file to .env.development or .env.production and update the values

# ============================================
# API Configuration
# ============================================

# Base URL for API requests (without trailing slash)
# Development: typically http://localhost:8080
# Production: your production API URL or leave empty for same-origin
VITE_API_BASE_URL=http://localhost:8080

# WebSocket base URL (without trailing slash)
# Development: typically ws://localhost:8080
# Production: your production WebSocket URL or leave empty for same-origin
VITE_WS_BASE_URL=ws://localhost:8080

# API version prefix
VITE_API_VERSION=/api/v1

# ============================================
# Feature Flags
# ============================================

# Enable debug mode (shows additional logging and debug tools)
# Set to "true" or "false"
VITE_ENABLE_DEBUG=false

# Enable mock data (useful for development without backend)
# Set to "true" or "false"
VITE_ENABLE_MOCK_DATA=false

# ============================================
# Development Server Configuration (optional)
# ============================================

# Development server port (default: 5173)
VITE_PORT=5173

# Optional: Proxy configuration for development
# Uncomment and set if you want to proxy API calls through Vite dev server
# VITE_API_PROXY=http://localhost:8080

