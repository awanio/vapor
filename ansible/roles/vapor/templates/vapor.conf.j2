# Vapor Configuration File
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

# JWT Secret for authentication
JWT_SECRET: "{{ vapor_jwt_secret_final }}"

# Server configuration
port: "{{ vapor_port }}"
host: "{{ vapor_host }}"
appdir: "{{ vapor_app_dir }}"

# TLS/HTTPS Configuration
tls_enabled: {{ vapor_tls_enabled | lower }}
{% if vapor_tls_enabled %}
# Certificates will be auto-generated in {{ vapor_certs_dir }}/
# To use custom certificates, uncomment and specify paths below:
# tls_cert_dir: "{{ vapor_certs_dir }}"
# tls_cert_file: "{{ vapor_certs_dir }}/server.crt"
# tls_key_file: "{{ vapor_certs_dir }}/server.key"
{% endif %}
# OVMF/UEFI firmware paths (optional)
{% if vapor_ovmf_code_path %}ovmf_code: "{{ vapor_ovmf_code_path }}"{% endif %}
{% if vapor_ovmf_vars_path %}ovmf_vars: "{{ vapor_ovmf_vars_path }}"{% endif %}
{% if vapor_ovmf_code_secure_path %}ovmf_code_secure: "{{ vapor_ovmf_code_secure_path }}"{% endif %}
{% if vapor_ovmf_vars_secure_path %}ovmf_vars_secure: "{{ vapor_ovmf_vars_secure_path }}"{% endif %}
