# Vapor Development Environment Configuration
# Copy this file to .env and customize as needed

# API Configuration
JWT_SECRET=development-secret-change-in-production
SERVER_ADDR=:8080
GO_ENV=development
DEBUG=true

# Test User Credentials
TEST_USER=vapor
TEST_PASSWORD=vapor123

# Docker Configuration (for DinD)
DOCKER_HOST=tcp://dind:2376
DOCKER_TLS_VERIFY=1
DOCKER_CERT_PATH=/certs/client

# Resource Limits (optional)
# Uncomment and adjust based on your system
# VAPOR_CPU_LIMIT=4
# VAPOR_MEMORY_LIMIT=8g

# Container Runtime Backend (optional)
# Forces a specific backend when using compose.sh
# Options: docker, nerdctl, podman
# COMPOSE_BACKEND=nerdctl

# Colima Configuration (for macOS users)
# COLIMA_CPU=4
# COLIMA_MEMORY=8
# COLIMA_DISK=100
# COLIMA_RUNTIME=containerd

# Network Configuration
# VAPOR_NETWORK_SUBNET=172.28.0.0/16
# VAPOR_NETWORK_GATEWAY=172.28.0.1

# iSCSI Target Configuration
TARGET_IQN=iqn.2024-01.io.vapor:storage.test
TARGET_PORTAL=0.0.0.0:3260
INITIATOR_USERID=vapor
INITIATOR_PASSWORD=vapor123

# K3s Configuration
K3S_TOKEN=vapor-dev-token
K3S_KUBECONFIG_MODE=666

# Port Mappings (change if conflicts exist)
API_PORT=8080
DOCKER_PORT=2376
K3S_PORT=6443
ISCSI_PORT=3260

# Volume Mount Paths (optional overrides)
# SOURCE_CODE_PATH=..
# STORAGE_TEST_PATH=/mnt/test-storage

# Logging
# LOG_LEVEL=debug
# LOG_FORMAT=json

# Development Features
# ENABLE_HOT_RELOAD=true
# ENABLE_PROFILING=false
# ENABLE_TRACING=false
