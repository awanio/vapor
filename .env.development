# Development Environment Variables
# Copy this file to .env for docker-compose to use

# JWT Configuration
JWT_SECRET=development-secret-change-in-production

# Server Configuration
SERVER_ADDR=:8080

# Development Mode
GO_ENV=development
DEBUG=true

# Test Users (created in container)
TEST_USER=vapor
TEST_PASSWORD=vapor123

# Database Configuration (for future features)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=vapor
DB_USER=vapor
DB_PASSWORD=vapor123

# Redis Configuration (for future features)
REDIS_HOST=redis
REDIS_PORT=6379

# Kubernetes Configuration
K8S_HOST=k3s
K8S_PORT=6443
K8S_TOKEN=vapor-dev-token

# iSCSI Configuration
ISCSI_TARGET_IQN=iqn.2024-01.io.vapor:storage.test
ISCSI_TARGET_PORTAL=iscsi-target:3260
ISCSI_USER=vapor
ISCSI_PASSWORD=vapor123

# NFS Configuration
NFS_SERVER=nfs-server
NFS_EXPORT=/nfs-share

# SMB/CIFS Configuration
SMB_SERVER=samba
SMB_SHARE=vapor
SMB_USER=vapor
SMB_PASSWORD=vapor123
